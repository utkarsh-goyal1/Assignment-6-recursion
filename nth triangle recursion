import java.util.*;
public class Main {
    public static void main(String args[]) {
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        print(n);
        System.out.print(sum);
    }
    static int sum=0;
    public static void print(int n)
    {
        if(n==0)
        {
            return ;
        }
        print(n-1);
        sum+=n;
        
    }
}
